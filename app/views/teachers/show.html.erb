<div class="row">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1 sign-up-form">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @teacher.name %></span>
        <p>Position: <%= @teacher.position %></p>
        <p>Email: <%= @teacher.email %></p>
      </div>
    </div>
    <% if current_teacher == @teacher %>
      <%= link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe, edit_teacher_path(@teacher), class: "waves-effect waves-light btn" %>
    <% end %>
  </div>
</div>